{{#if addNewQuestion}}
  <h3>Add New Question:</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>

        <button {{action 'save4'}} class="btn btn-primary">Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}} class="btn btn-primary">New Question</button>
{{/if}}
